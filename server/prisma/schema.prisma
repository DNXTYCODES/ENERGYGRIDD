generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Author {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  image     String
  uniqueId  String   @unique
  name      String
  role      String
  phone     String
  email     String  @unique
  about     String
  awards    String
  experience String
  // publications List<Publication> @relation(fields: [id], references: [authorId])
}

model Publication {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  category    String
  // authors    Author[] @relation(fields: [authorId], references: [uniqueId])
  authorId    String[]
  dateCreated DateTime @default(now())
}

model Test {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
}

















